@{
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
    ViewBag.Title = "Client Info";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow rounded-4 p-4 w-100" style="max-width: 500px;">
        <div class="card-body text-center">
            <h4 class="mb-4">Client Info Viewer</h4>

            <p><strong>Your IP Address:</strong></p>
            <p class="text-primary fs-5">@ViewBag.Ip</p>

            <p><strong>Time Elapsed:</strong></p>
            <p class="text-success fs-5">@ViewBag.Elapsed</p>

            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-2">Refresh</a>

        </div>
    </div>
</div>
